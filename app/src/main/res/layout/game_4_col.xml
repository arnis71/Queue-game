<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game3Cols"
    android:orientation="horizontal"
    android:id="@+id/main_layout"
    android:padding="10dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="300dp"
        android:id="@+id/spawn"
        android:text="spawn" />

   <FrameLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="40dp"
       android:id="@+id/player">
       <ImageView
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:src="@drawable/player"
           android:id="@+id/player_icon" />
       <ProgressBar
           style="?android:attr/progressBarStyleHorizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/progressBar"
           android:visibility="invisible"
           android:max="100"
           android:progress="1"/>
   </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_linear">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/far_left_layout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cashier"
            android:layout_centerHorizontal="true"
            android:id="@+id/cashier_far_left"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#fef9c2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/cashier_far_left"
            android:layout_marginTop="10dp"
            android:id="@+id/table_far_left"
            android:textSize="20dp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/left_layout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cashier"
            android:layout_centerHorizontal="true"
            android:id="@+id/cashier_left"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#fef9c2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cashier_left"
            android:id="@+id/table_left"
            android:textSize="20dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/right_layout">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cashier"
            android:layout_centerHorizontal="true"
            android:id="@+id/cashier_right"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#fef9c2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/cashier_right"
            android:id="@+id/table_right"
            android:textSize="20dp" />


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/far_right_layout" >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cashier"
                android:layout_centerHorizontal="true"
                android:id="@+id/cashier_far_right" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="#fef9c2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/cashier_far_right"
                android:id="@+id/table_far_right"
                android:textSize="20dp" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
